{
  "name": "@instamint/business-server",
  "version": "1.0.0",
  "description": "Business API service for Instamint",
  "type": "commonjs",
  "scripts": {
    "start": "node ./dist/index.js",
    "build": "tsc --project tsconfig.json",
    "dev": "tsx watch ./src/index.ts",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "test": "NODE_ENV=test jest --forceExit --verbose --maxWorkers=1",
    "test:ci": "NODE_ENV=test jest --forceExit --maxWorkers=3 --ci",
    "test:watch": "NODE_ENV=test jest --watch",
    "kn:latest": "knex migrate:latest",
    "kn:rollback": "knex migrate:rollback",
    "kn:make": "knex migrate:make $1"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20240129.0",
    "@hono/node-server": "^1.7.0",
    "@hono/sentry": "^1.0.0",
    "@hono/zod-validator": "^0.1.11",
    "dotenv": "^16.4.1",
    "hono": "^4.0.8",
    "jest": "^29.7.0",
    "knex": "^3.1.0",
    "objection": "^3.1.3",
    "pg": "^8.11.3",
    "rate-limiter-flexible": "^4.0.1",
    "ts-node": "^10.9.2",
    "undici": "^6.6.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@instamint/eslint-config-server": "workspace:^",
    "@instamint/server-types": "workspace:^",
    "@instamint/tsconfig-server": "workspace:^",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "esbuild-jest": "^0.5.0",
    "tsx": "^3.12.2",
    "typescript": "^5.3.3"
  }
}
